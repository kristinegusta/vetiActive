---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
{%- for page in collections.all %}
  {%- if not page.data.eleventyExcludeFromCollections 
         and not page.url.includes('/blog/')
         and not page.url.includes('/admin/')
         and not page.url.includes('/tirgus/')
         and page.url != '/sitemap.xml'
         and page.url != '/robots.txt' %}
  <url>
    <loc>https://3hphysio.nl{{ page.url }}</loc>
    <lastmod>{{ page.date.toISOString() }}</lastmod>
    {%- if page.url == '/' or page.url == '/en/' %}
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
    {%- elif page.url.includes('/contact') %}
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    {%- elif page.url.includes('/about') or page.url.includes('/horse') or page.url.includes('/hound') or page.url.includes('/human') %}
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
    {%- else %}
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
    {%- endif %}
    {%- if page.data.lang %}
    {# Detect if current page is English or Dutch #}
    {%- if '/en/' in page.url or page.url == '/en' %}
      {# Current page is ENGLISH - strip /en to get NL version #}
      {%- set nlUrl = page.url | replace('/en/', '/') | replace('/en', '/') %}
      {%- set enUrl = page.url %}
    {%- else %}
      {# Current page is DUTCH - add /en to get EN version #}
      {%- set nlUrl = page.url %}
      {%- if page.url == '/' %}
        {%- set enUrl = '/en/' %}
      {%- else %}
        {%- set enUrl = '/en' + page.url %}
      {%- endif %}
    {%- endif %}
    <xhtml:link rel="alternate" hreflang="en" href="https://3hphysio.nl{{ enUrl }}"/>
    <xhtml:link rel="alternate" hreflang="nl" href="https://3hphysio.nl{{ nlUrl }}"/>
    <xhtml:link rel="alternate" hreflang="x-default" href="https://3hphysio.nl{{ enUrl }}"/>
    {%- endif %}
  </url>
  {%- endif %}
{%- endfor %}
</urlset>
